<h1>Show Page</h1>
<%= link_to 'Home Page', restaurants_path %>
<p><%= @restaurant.name %></p>
<ul>
  <li>Address : <%= @restaurant.address %></li>
  <li>Category : <%= @restaurant.category %></li>
  <li>Number : <%= @restaurant.phone_number %></li>
</ul>
<% @restaurant.reviews.each do |review| %>
<p><%= review.content %> Rating : <%= review.rating %> / 5<p>
<% end %>
<%= link_to 'Edit', edit_restaurant_path %>
<%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure?"} %>
<%= link_to 'Add a review', new_restaurant_review_path(@restaurant) %>
