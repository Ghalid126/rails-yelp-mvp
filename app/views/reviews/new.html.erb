<h1>Add a review</h1>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating, label:'rating', collection: (0..5), error: 'Rating is mandatory' %>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>
<%= link_to "Go Back", restaurant_path(@restaurant) %>
